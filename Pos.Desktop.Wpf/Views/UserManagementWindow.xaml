<Window x:Class="Pos.Desktop.Wpf.Views.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Pos.Desktop.Wpf.Converters"
        Title="GestÃ£o de UsuÃ¡rios - PDV Multi-Vertical" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <local:StringToBoolConverter x:Key="StringToBoolConverter"/>
        <local:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="GestÃ£o de UsuÃ¡rios" Style="{StaticResource HeaderTextStyle}" Foreground="White"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="âž• Novo UsuÃ¡rio" 
                            Command="{Binding NewUserCommand}"
                            Background="#27AE60"
                            Foreground="White"
                            Style="{StaticResource ButtonStyle}"/>
                    <Button Content="ðŸ”„ Atualizar" 
                            Command="{Binding RefreshCommand}"
                            Background="#3498DB"
                            Foreground="White"
                            Style="{StaticResource ButtonStyle}"/>
                    <Button Content="âŒ Fechar" 
                            Click="CloseButton_Click"
                            Background="#E74C3C"
                            Foreground="White"
                            Style="{StaticResource ButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Users List -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Name="SearchBox">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        
                        <Button Grid.Column="1" 
                                Content="ðŸ”" 
                                Command="{Binding SearchCommand}"
                                Background="#3498DB"
                                Foreground="White"
                                Style="{StaticResource ButtonStyle}"/>
                    </Grid>

                    <!-- Users DataGrid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Users}"
                              SelectedItem="{Binding SelectedUser}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="#F8F9FA">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nome" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="UsuÃ¡rio" Binding="{Binding Username}" Width="120"/>
                            <DataGridTextColumn Header="Perfil" Binding="{Binding Role}" Width="100"/>
                            <DataGridCheckBoxColumn Header="Ativo" Binding="{Binding IsActive}" Width="60"/>
                            <DataGridTemplateColumn Header="AÃ§Ãµes" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="âœï¸" 
                                                    Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#F39C12"
                                                    Foreground="White"
                                                    Width="30" Height="25"
                                                    FontSize="10"
                                                    Margin="2"/>
                                            <Button Content="ðŸ—‘ï¸" 
                                                    Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#E74C3C"
                                                    Foreground="White"
                                                    Width="30" Height="25"
                                                    FontSize="10"
                                                    Margin="2"/>
                                        </StackPanel>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- User Form -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Dados do UsuÃ¡rio" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,20"/>
                        
                        <!-- Nome -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Nome Completo *" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding UserForm.Name}" Style="{StaticResource InputStyle}"/>
                        </StackPanel>

                        <!-- Username -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Nome de UsuÃ¡rio *" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding UserForm.Username}" Style="{StaticResource InputStyle}"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Email" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding UserForm.Email}" Style="{StaticResource InputStyle}"/>
                        </StackPanel>

                        <!-- Senha -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Senha" FontWeight="Bold" Margin="0,0,0,5"/>
                            <PasswordBox Password="{Binding UserForm.Password, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource InputStyle}"/>
                        </StackPanel>

                        <!-- Confirmar Senha -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Confirmar Senha" FontWeight="Bold" Margin="0,0,0,5"/>
                            <PasswordBox Password="{Binding UserForm.ConfirmPassword, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource InputStyle}"/>
                        </StackPanel>

                        <!-- Perfil -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Perfil *" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Roles}"
                                      SelectedItem="{Binding UserForm.Role}"
                                      Style="{StaticResource InputStyle}"/>
                        </StackPanel>

                        <!-- Ativo -->
                        <StackPanel Margin="0,0,0,20">
                            <CheckBox Content="UsuÃ¡rio Ativo" 
                                      IsChecked="{Binding UserForm.IsActive}"
                                      FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Vertical">
                            <Button Content="ðŸ’¾ Salvar" 
                                    Command="{Binding SaveUserCommand}"
                                    Background="#27AE60"
                                    Foreground="White"
                                    Style="{StaticResource ButtonStyle}"
                                    Height="40"/>
                            
                            <Button Content="ðŸ”„ Cancelar" 
                                    Command="{Binding CancelCommand}"
                                    Background="#95A5A6"
                                    Foreground="White"
                                    Style="{StaticResource ButtonStyle}"
                                    Height="40"/>
                        </StackPanel>

                        <!-- Error Message -->
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="#E74C3C"
                                   FontSize="12"
                                   Margin="0,15,0,0"
                                   TextWrapping="Wrap"
                                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Collapsed}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" Padding="10,5">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="White" 
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
