<Window x:Class="Pos.Desktop.Wpf.Views.CloseCashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Pos.Desktop.Wpf.Converters"
        Title="Fechamento de Caixa - PDV Multi-Vertical" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <local:StringToBoolConverter x:Key="StringToBoolConverter"/>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="SummaryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Fechamento de Caixa" Style="{StaticResource HeaderTextStyle}" Foreground="White"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ”„ Atualizar" 
                            Command="{Binding RefreshCommand}"
                            Background="#3498DB"
                            Foreground="White"
                            Style="{StaticResource ButtonStyle}"/>
                    <Button Content="âŒ Fechar" 
                            Click="CloseButton_Click"
                            Background="#E74C3C"
                            Foreground="White"
                            Style="{StaticResource ButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
            <StackPanel>
                
                <!-- Cash Summary -->
                <Border Style="{StaticResource SummaryCardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ’° Resumo do Caixa" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Left Column -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                <TextBlock Text="Data/Hora de Abertura:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding OpenDateTime, StringFormat='dd/MM/yyyy HH:mm'}" FontSize="14"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                                <TextBlock Text="UsuÃ¡rio:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding UserName}" FontSize="14"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                                <TextBlock Text="Saldo Inicial:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding InitialBalance, StringFormat=C}" FontSize="14" Foreground="#27AE60"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                                <TextBlock Text="Total de Vendas:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding TotalSales, StringFormat=C}" FontSize="14" Foreground="#3498DB"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,10">
                                <TextBlock Text="Total de Entradas:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding TotalInflows, StringFormat=C}" FontSize="14" Foreground="#27AE60"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,10">
                                <TextBlock Text="Total de SaÃ­das:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding TotalOutflows, StringFormat=C}" FontSize="14" Foreground="#E74C3C"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
                                <Border Background="#F8F9FA" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="SALDO ESPERADO NO CAIXA:" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding ExpectedBalance, StringFormat=C}" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Payment Methods Summary -->
                <Border Style="{StaticResource SummaryCardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ’³ Resumo por Forma de Pagamento" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <DataGrid ItemsSource="{Binding PaymentMethods}" 
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  AlternatingRowBackground="#F8F9FA">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Forma de Pagamento" Binding="{Binding Method}" Width="*"/>
                                <DataGridTextColumn Header="Quantidade" Binding="{Binding Count}" Width="100"/>
                                <DataGridTextColumn Header="Valor Total" Binding="{Binding Total, StringFormat=C}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Cash Count -->
                <Border Style="{StaticResource SummaryCardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ’µ Contagem de Dinheiro" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="CÃ©dulas" FontWeight="Bold" Margin="0,0,0,10"/>
                                <StackPanel>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="R$ 100,00:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding CashCount.HundredBills}" Width="80" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="R$ 50,00:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding CashCount.FiftyBills}" Width="80" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="R$ 20,00:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding CashCount.TwentyBills}" Width="80" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="R$ 10,00:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding CashCount.TenBills}" Width="80" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="R$ 5,00:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding CashCount.FiveBills}" Width="80" HorizontalAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="10,0">
                                <TextBlock Text="Moedas" FontWeight="Bold" Margin="0,0,0,10"/>
                                <StackPanel>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="R$ 1,00:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding CashCount.OneCoins}" Width="80" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="R$ 0,50:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding CashCount.FiftyCents}" Width="80" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="R$ 0,25:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding CashCount.TwentyFiveCents}" Width="80" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="R$ 0,10:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding CashCount.TenCents}" Width="80" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="R$ 0,05:" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding CashCount.FiveCents}" Width="80" HorizontalAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                <TextBlock Text="Total Contado" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Border Background="#F8F9FA" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding CashCount.TotalCounted, StringFormat=C}" 
                                                   FontSize="18" FontWeight="Bold" 
                                                   Foreground="#2C3E50" HorizontalAlignment="Center"/>
                                        <TextBlock Text="DiferenÃ§a:" FontSize="12" Margin="0,10,0,5"/>
                                        <TextBlock Text="{Binding CashCount.Difference, StringFormat=C}" 
                                                   FontSize="14" FontWeight="Bold" 
                                                   Foreground="{Binding CashCount.DifferenceColor}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="ðŸ’° Fechar Caixa" 
                            Command="{Binding CloseCashCommand}"
                            Background="#27AE60"
                            Foreground="White"
                            Style="{StaticResource ButtonStyle}"
                            FontSize="16"
                            Padding="20,12"/>
                    <Button Content="ðŸ–¨ï¸ Imprimir RelatÃ³rio" 
                            Command="{Binding PrintReportCommand}"
                            Background="#3498DB"
                            Foreground="White"
                            Style="{StaticResource ButtonStyle}"
                            FontSize="16"
                            Padding="20,12"/>
                    <Button Content="ðŸ’¾ Salvar RelatÃ³rio" 
                            Command="{Binding SaveReportCommand}"
                            Background="#9B59B6"
                            Foreground="White"
                            Style="{StaticResource ButtonStyle}"
                            FontSize="16"
                            Padding="20,12"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" Padding="10,5">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="White" 
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
