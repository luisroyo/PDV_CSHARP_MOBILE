<Window x:Class="Pos.Desktop.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pos.Desktop.Wpf.Converters"
        mc:Ignorable="d"
        Title="PDV Multi-Vertical - Frente de Caixa" 
        Height="900" 
        Width="1400"
        WindowState="Maximized"
        Background="#F5F5F5">
    
    <Window.Resources>
        <local:BoolToStringConverter x:Key="BoolToStringConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        
        <Style x:Key="ProductCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        
        <Style x:Key="CartItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Top Row -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="PDV Multi-Vertical" Style="{StaticResource HeaderTextStyle}" Foreground="White"/>
                        <TextBlock Text="{Binding BusinessProfile}" FontSize="14" Foreground="#BDC3C7"/>
                        <TextBlock Text="{Binding IsOnline, Converter={StaticResource BoolToStringConverter}}" 
                                   FontSize="12" 
                                   Foreground="{Binding IsOnline, Converter={StaticResource BoolToColorConverter}}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                        <TextBlock Text="Usuário: " Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentUser}" Foreground="#3498DB" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Total: " Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding CartTotal, StringFormat=C}" Foreground="#E74C3C" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                
                <!-- Menu Row -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,0">
                    <Button Content="📦 Produtos" 
                            Click="ProductsButton_Click"
                            Background="#27AE60"
                            Foreground="White"
                            Padding="15,8"
                            FontSize="12"
                            FontWeight="Bold"
                            Margin="0,0,10,0"/>
                    <Button Content="👥 Clientes" 
                            Click="CustomersButton_Click"
                            Background="#3498DB"
                            Foreground="White"
                            Padding="15,8"
                            FontSize="12"
                            FontWeight="Bold"
                            Margin="0,0,10,0"/>
                    <Button Content="📊 Relatórios" 
                            Click="ReportsButton_Click"
                            Background="#9B59B6"
                            Foreground="White"
                            Padding="15,8"
                            FontSize="12"
                            FontWeight="Bold"
                            Margin="0,0,10,0"/>
                    <Button Content="⚙️ Configurações" 
                            Click="SettingsButton_Click"
                            Background="#95A5A6"
                            Foreground="White"
                            Padding="15,8"
                            FontSize="12"
                            FontWeight="Bold"
                            Margin="0,0,10,0"/>
                    <Button Content="👥 Usuários" 
                            Click="UsersButton_Click"
                            Background="#8E44AD"
                            Foreground="White"
                            Padding="15,8"
                            FontSize="12"
                            FontWeight="Bold"
                            Margin="0,0,10,0"/>
                    <Button Content="💰 Fechar Caixa" 
                            Click="CloseCashButton_Click"
                            Background="#E74C3C"
                            Foreground="White"
                            Padding="15,8"
                            FontSize="12"
                            FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Products Section -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Bar -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="16" 
                                 Padding="10,8"
                                 BorderBrush="#3498DB"
                                 BorderThickness="2"
                                 VerticalContentAlignment="Center">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        
                        <Button Grid.Column="1" 
                                Content="🔍 Buscar" 
                                Command="{Binding SearchCommand}"
                                Background="#3498DB"
                                Foreground="White"
                                Padding="15,8"
                                Margin="10,0,0,0"
                                FontWeight="Bold"/>
                    </Grid>

                    <!-- Products Grid -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Products}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ProductCardStyle}">
                                        <Border.InputBindings>
                                            <MouseBinding Gesture="LeftDoubleClick" 
                                                         Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                         CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" 
                                                       FontWeight="Bold" 
                                                       FontSize="14" 
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding Sku}" 
                                                       FontSize="12" 
                                                       Foreground="#7F8C8D"
                                                       Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding Price, StringFormat=C}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold" 
                                                       Foreground="#E74C3C"
                                                       Margin="0,0,0,10"/>
                                            <Button Content="Adicionar" 
                                                    Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#27AE60"
                                                    Foreground="White"
                                                    Padding="10,5"
                                                    FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Cart Section -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Cart Header -->
                    <TextBlock Grid.Row="0" 
                               Text="Carrinho de Compras" 
                               Style="{StaticResource HeaderTextStyle}"
                               Margin="0,0,0,15"/>

                    <!-- Cart Items -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CartItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CartItemStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Product.Name}" 
                                                           FontWeight="Bold" 
                                                           FontSize="12"/>
                                                <TextBlock Text="{Binding Product.Sku}" 
                                                           FontSize="10" 
                                                           Foreground="#7F8C8D"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Qtd: " FontSize="10"/>
                                                    <TextBlock Text="{Binding Qty}" FontSize="10" FontWeight="Bold"/>
                                                    <TextBlock Text=" x " FontSize="10"/>
                                                    <TextBlock Text="{Binding UnitPrice, StringFormat=C}" FontSize="10"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Subtotal, StringFormat=C}" 
                                                           FontWeight="Bold" 
                                                           Foreground="#E74C3C"
                                                           FontSize="12"/>
                                            </StackPanel>
                                            
                                            <Button Grid.Column="1" 
                                                    Content="❌" 
                                                    Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#E74C3C"
                                                    Foreground="White"
                                                    Width="25"
                                                    Height="25"
                                                    FontSize="10"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Cart Total -->
                    <Border Grid.Row="2" 
                            Background="#ECF0F1" 
                            Padding="10" 
                            CornerRadius="5" 
                            Margin="0,10,0,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="TOTAL: " FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="{Binding CartTotal, StringFormat=C}" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#E74C3C"/>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3" Orientation="Vertical">
                        <Button Content="💳 Processar Pagamento" 
                                Command="{Binding ProcessPaymentCommand}"
                                Background="#3498DB"
                                Foreground="White"
                                Padding="15,10"
                                FontSize="14"
                                FontWeight="Bold"
                                Height="45"
                                Margin="0,0,0,10"/>
                        
                        <Button Content="🖨️ Imprimir Cupom" 
                                Command="{Binding PrintReceiptCommand}"
                                Background="#9B59B6"
                                Foreground="White"
                                Padding="15,10"
                                FontSize="14"
                                FontWeight="Bold"
                                Height="45"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" Padding="10,5">
            <TextBlock Text="Sistema PDV Multi-Vertical - Offline First | ESC/POS Ready | Multi-Tenant" 
                       Foreground="White" 
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
