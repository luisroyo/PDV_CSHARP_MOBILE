<Window x:Class="Pos.Desktop.Wpf.Views.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Pos.Desktop.Wpf.Converters"
        Title="Processamento de Pagamento - PDV Multi-Vertical" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <local:StringToBoolConverter x:Key="StringToBoolConverter"/>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="PaymentMethodButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="60"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20,15">
            <TextBlock Text="Processamento de Pagamento" Style="{StaticResource HeaderTextStyle}" Foreground="White" HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Order Summary -->
            <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Resumo do Pedido" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding OrderNumber}" FontSize="14" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding ItemCount, StringFormat='{0} item(ns)'}" FontSize="12" Foreground="#7F8C8D"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="Total:" FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TotalAmount, StringFormat=C}" FontSize="18" FontWeight="Bold" Foreground="#E74C3C"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Payment Method Selection -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Forma de Pagamento" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Button Grid.Row="0" Grid.Column="0" 
                                Content="💵 Dinheiro" 
                                Command="{Binding SelectPaymentMethodCommand}"
                                CommandParameter="Cash"
                                Background="#27AE60"
                                Foreground="White"
                                Style="{StaticResource PaymentMethodButtonStyle}"/>
                        
                        <Button Grid.Row="0" Grid.Column="1" 
                                Content="💳 Cartão" 
                                Command="{Binding SelectPaymentMethodCommand}"
                                CommandParameter="Card"
                                Background="#3498DB"
                                Foreground="White"
                                Style="{StaticResource PaymentMethodButtonStyle}"/>
                        
                        <Button Grid.Row="1" Grid.Column="0" 
                                Content="📱 PIX" 
                                Command="{Binding SelectPaymentMethodCommand}"
                                CommandParameter="Pix"
                                Background="#9B59B6"
                                Foreground="White"
                                Style="{StaticResource PaymentMethodButtonStyle}"/>
                        
                        <Button Grid.Row="1" Grid.Column="1" 
                                Content="🏦 Transferência" 
                                Command="{Binding SelectPaymentMethodCommand}"
                                CommandParameter="Transfer"
                                Background="#F39C12"
                                Foreground="White"
                                Style="{StaticResource PaymentMethodButtonStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Payment Details -->
            <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Detalhes do Pagamento" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <!-- Cash Payment -->
                    <StackPanel Visibility="{Binding IsCashPayment, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Visible}">
                        <TextBlock Text="Valor Recebido:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ReceivedAmount, StringFormat=F2}" 
                                 Style="{StaticResource InputStyle}"
                                 Name="ReceivedAmountBox">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding ProcessPaymentCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        
                        <TextBlock Text="Troco:" FontWeight="Bold" Margin="0,10,0,5"/>
                        <TextBlock Text="{Binding ChangeAmount, StringFormat=C}" 
                                   FontSize="18" FontWeight="Bold" 
                                   Foreground="#27AE60" Margin="0,0,0,10"/>
                    </StackPanel>
                    
                    <!-- Card Payment -->
                    <StackPanel Visibility="{Binding IsCardPayment, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Visible}">
                        <TextBlock Text="Número do Cartão:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding CardNumber}" Style="{StaticResource InputStyle}" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Validade:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding CardExpiry}" Style="{StaticResource InputStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="CVV:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding CardCvv}" Style="{StaticResource InputStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <!-- PIX Payment -->
                    <StackPanel Visibility="{Binding IsPixPayment, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Visible}">
                        <TextBlock Text="Chave PIX:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding PixKey}" Style="{StaticResource InputStyle}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="QR Code:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Border Background="#F8F9FA" Height="100" CornerRadius="5" Margin="0,0,0,10">
                            <TextBlock Text="QR Code aqui" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#7F8C8D"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Transfer Payment -->
                    <StackPanel Visibility="{Binding IsTransferPayment, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Visible}">
                        <TextBlock Text="Banco:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Banks}" 
                                  SelectedItem="{Binding SelectedBank}"
                                  Style="{StaticResource InputStyle}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Agência:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Agency}" Style="{StaticResource InputStyle}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Conta:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Account}" Style="{StaticResource InputStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="✅ Processar Pagamento" 
                        Command="{Binding ProcessPaymentCommand}"
                        Background="#27AE60"
                        Foreground="White"
                        Style="{StaticResource ButtonStyle}"
                        FontSize="16"
                        Padding="20,12"/>
                
                <Button Content="❌ Cancelar" 
                        Command="{Binding CancelCommand}"
                        Background="#E74C3C"
                        Foreground="White"
                        Style="{StaticResource ButtonStyle}"
                        FontSize="16"
                        Padding="20,12"/>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" Padding="10,5">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="White" 
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
