# Configurações de Produção - Sistema PDV Multi-Vertical
# Copie este arquivo para .env e ajuste as configurações

# PostgreSQL
POSTGRES_PASSWORD=PosMultiVertical2024!
POSTGRES_USER=pos_user
POSTGRES_DB=pos_multivertical

# JWT
JWT_SECRET_KEY=PDV_Multi_Vertical_Super_Secret_Key_2024_Production_At_Least_64_Characters_Long_For_Maximum_Security_And_Compliance

# Redis
REDIS_PASSWORD=

# API
API_PORT=80
API_HTTPS_PORT=443

# Nginx
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443

# Backup
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Logs
LOG_LEVEL=Information
LOG_FILE_PATH=./logs

# Segurança
ALLOWED_ORIGINS=http://localhost,https://localhost
CORS_ENABLED=true

# Performance
MAX_CONNECTIONS=200
CACHE_TTL_MINUTES=30
RATE_LIMIT_PER_MINUTE=100
